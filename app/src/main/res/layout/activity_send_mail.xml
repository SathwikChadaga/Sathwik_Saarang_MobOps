<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/darker_gray"
    android:orientation="vertical"

    tools:context="com.example.android.sathwik_saarang_mobops.SendMailActivity">


    <TextView
        android:id="@+id/mail_to_email_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1"

        android:background="#FFF9C4"
        android:gravity="center_vertical"

        android:paddingLeft="32dp"
        android:paddingRight="32dp"

        android:text="To"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/mail_subject"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginTop="0.01dp"

        android:layout_weight="1"

        android:background="#FFF9C4"
        android:gravity="center_vertical"

        android:hint="Subject"
        android:inputType="textEmailSubject"

        android:paddingLeft="32dp"
        android:paddingRight="32dp" />


    <EditText
        android:id="@+id/mail_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0.01dp"

        android:layout_weight="4"

        android:background="#FFF9C4"
        android:gravity="top"

        android:hint="Compose email"
        android:inputType="textMultiLine"

        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="0.01dp"

        android:background="#FFF9C4"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"

            android:layout_weight="1"

            android:onClick="composeEmail"

            android:text="Send" />

    </LinearLayout>


</LinearLayout>

